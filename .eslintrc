{
  "extends": "standard",
  "plugins": [
    "promise"
  ],
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "yoda": 0,
    "semi": [2, "always"],
    "no-extra-semi": 2,
    "semi-spacing": [2, { "before": false, "after": true }],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "space-before-function-paren": ["error", { "anonymous": "ignore", "named": "never" }],
    "eqeqeq": 0
  }
}
